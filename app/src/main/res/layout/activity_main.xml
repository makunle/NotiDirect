<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".activity.MainActivity">

    <Switch
            android:text="开屏自动跳转"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/switchScreenOnJump" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp" android:textSize="18sp" android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="通知使用权"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNotificationUsePermission" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/switchScreenOnJump"/>
</android.support.constraint.ConstraintLayout>